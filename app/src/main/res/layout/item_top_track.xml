<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.elkcreek.rodneytressler.musicapp.utils.EventHandlers"/>

        <variable
            name="mainViewModel"
            type="com.elkcreek.rodneytressler.musicapp.ui.mainview.MainViewModel"/>

        <variable
            name="imageUrl"
            type="String"/>

        <variable
            name="artistName"
            type="String"/>

        <variable
            name="trackUid"
            type="String"/>

        <variable
            name="trackName"
            type="String"/>

        <variable
            name="topTrack"
            type="com.elkcreek.rodneytressler.musicapp.repo.network.MusicApi.TopTrack"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="@{(v) -> handler.onTrackClicked(v, trackName, trackUid, artistName, mainViewModel)}"
        android:layout_margin="10dp"
        android:background="#111111">

        <ImageView
            android:id="@+id/image_track_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp"
            app:imageUrl="@{imageUrl}"
            app:imageObject="@{topTrack}"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <LinearLayout
            app:layout_constraintStart_toEndOf="@id/image_track_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:maxLines="2"
                android:text="@{artistName}"
                android:gravity="center"
                android:id="@+id/text_artist_name"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_track_name"
                android:text="@{trackName}"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</layout>