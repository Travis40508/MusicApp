<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="handler"
            type="com.elkcreek.rodneytressler.musicapp.utils.EventHandlers"/>

        <variable
            name="mainViewModel"
            type="com.elkcreek.rodneytressler.musicapp.ui.mainview.MainViewModel"/>

        <variable
            name="track"
            type="com.elkcreek.rodneytressler.musicapp.repo.network.MusicApi.Track"/>

        <variable
            name="artistName"
            type="String"/>

        <variable
            name="imageUrl"
            type="String"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(v) -> handler.onTrackClicked(v, track.trackName, track.trackUid, artistName, mainViewModel)}"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/item_similar_track_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:similarTrackImage="@{imageUrl}"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/item_similar_track_artist_name"
            android:layout_marginTop="10dp"
            android:text="@{artistName}"
            android:textStyle="bold"
            android:maxLines="2"
            android:gravity="center"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/item_similar_track_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_similar_track_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{track.trackName}"
            android:textStyle="bold"
            android:maxLines="2"
            android:gravity="center"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_similar_track_artist_name"
            android:textColor="@android:color/white"
            />

    </android.support.constraint.ConstraintLayout>
</layout>

