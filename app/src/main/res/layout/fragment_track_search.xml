<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.elkcreek.rodneytressler.musicapp.ui.tracksearchview.TrackSearchViewModel"/>

        <variable
            name="adapter"
            type="com.elkcreek.rodneytressler.musicapp.utils.Adapter"/>

        <import type="android.support.v7.widget.LinearLayoutManager"/>
        <import type="android.view.View"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/black">

        <EditText
            android:id="@+id/input_track_search"
            android:hint="Enter Track Name"
            android:inputType="text"
            android:onTextChanged="@{viewModel.onTrackSearchTextChanged}"
            android:imeOptions="actionDone"
            android:focusedByDefault="false"
            android:layout_margin="10dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/text_search_value"
            android:textColor="@android:color/white"
            android:text="@{viewModel.trackSearchValue}"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/input_track_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            app:layout_constraintTop_toBottomOf="@id/text_search_value"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            app:data="@{viewModel.trackList}"
            android:adapter="@{adapter}"
            app:adapter="@{adapter}"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_height="0dp"
            android:paddingBottom="50dp">

        </android.support.v7.widget.RecyclerView>

        <FrameLayout
            android:id="@+id/loading_layout"
            android:visibility="@{viewModel.showLoadingLayout ? View.VISIBLE : View.GONE}"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_search_value"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">

            <ProgressBar
                android:id="@+id/bio_progress_bar"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </android.support.constraint.ConstraintLayout>
</layout>

