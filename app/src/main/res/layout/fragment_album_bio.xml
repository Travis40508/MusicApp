<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.elkcreek.rodneytressler.musicapp.ui.albumbioview.AlbumBioViewModel"/>

        <import type="com.elkcreek.rodneytressler.musicapp.utils.Constants"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/black"
        android:clickable="true"
        android:focusable="true">


        <ScrollView
            android:id="@+id/bio_scroll_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fillViewport="false"
            android:paddingBottom="125dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_album_bio"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    app:albumBioImage="@{viewModel.imageUrl}"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"/>


                <TextView
                    android:id="@+id/text_album_bio"
                    android:text="@{viewModel.bioIsExpanded ? viewModel.albumContent : viewModel.albumSummary}"
                    android:layout_marginTop="15dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/read_more_layout"
                    android:layout_width="match_parent"
                    android:onClick="@{() -> viewModel.bioExpandedClicked()}"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white"/>

                    <TextView
                        android:id="@+id/text_read_more"
                        android:textColor="@android:color/white"
                        android:text="@{viewModel.bioIsExpanded ? Constants.COLLAPSE : Constants.READ_MORE}"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>
